{
  "name": "surrealql-lsp",
  "displayName": "surrealql-lsp",
  "description": "SurrealQL language support for Visual Studio Code",
  "author": "Cellan Hall",
  "license": "MIT OR Apache-2.0",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ce11an/surrealql-lsp"
  },
  "publisher": "Ce11an",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:surql"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "surql",
        "extensions": [
          ".surql"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "package": "vsce package -o surrealql-lsp.vsix",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node16",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "lint": "eslint ./src --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/vscode": "^1.75.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.29.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
